<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_pole1"
        android:layout_width="97dp"
        android:layout_height="42dp"
        android:layout_marginBottom="469dp"
        android:layout_marginStart="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Поле1"/>

    <TextView
        android:id="@+id/tv_pole2"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="98dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_zapol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_pole1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Поле2"/>

    <Button
        android:id="@+id/btn_zapol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginBottom="350dp"
        android:layout_marginEnd="138dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="113dp"
        android:text="Заполнить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



</android.support.constraint.ConstraintLayout>